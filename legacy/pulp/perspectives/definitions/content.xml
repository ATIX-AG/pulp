<perspective name="content" url="/pulp"
	description="advanced software content management">
	<tasks>
		<task name="channel create" url="/pulp/channel/new"
			display="Create Channel">
			<url-match>/pulp/channel/*</url-match>
		</task>
		<task name="channel add package"
			url="/pulp/channels/add_package"
			display="Add Content to this Channel">
			<url-match>/pulp/channels/details/*</url-match>
		</task>
		<task name="channel clone" url="/pulp/channel/clone"
			display="Clone A Channel">
			<url-match>/pulp/channel/*</url-match>
		</task>
		<task name="channel delete" url="/pulp/channels/delete"
			display="Delete A channel">
			<url-match>/pulp/channel/*</url-match>
		</task>
        <task name="content source create" url="/pulp/content/new"
            display="Create a Content Source">
            <url-match>/pulp/content/*</url-match>
            <url-match>/pulp/*</url-match>
        </task>
		
	</tasks>
</perspective>