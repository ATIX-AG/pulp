#!/bin/bash
#
# pulp-cds         Startup script for the Pulp CDS services
#
# chkconfig: - 97 9
#
### BEGIN INIT INFO
# Required-Start: $goferd $httpd
# Required-Stop: $httpd $goferd
# Short-Description: start and stop the Pulp CDS webservices
# Description: Pulp is comprehensive content repository and consumer management

. /etc/rc.d/init.d/functions
RETVAL=0


start() {
    /etc/rc.d/init.d/goferd start || RETVAL=$?
    [ $RETVAL = 0 ] && /etc/rc.d/init.d/httpd start || RETVAL=$?
    return $RETVAL
}

stop() {
    /etc/rc.d/init.d/httpd stop
    /etc/rc.d/init.d/goferd stop
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo $"Usage: pulp-cds {start|stop|restart}"
        RETVAL=3
esac

exit $RETVAL
