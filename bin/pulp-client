import sys
import os
from gettext import gettext as _

from pulp.client.credentials import Consumer
from pulp.client.cli.base import PulpCLI
from pulp.client.core import consumer, errata, repo


def root_check():
    """
    Simple function to assure execution by root
    """
    if os.getuid() == 0:
        return
    print >> sys.stderr, _('error: must be root to execute')
    sys.exit(os.EX_NOUSER)


def setup_client(client):
    consumer_cmd = consumer.Consumer()
    consumer_cmd.add_action('create', consumer.Create())
    consumer_cmd.add_action('delete', consumer.Delete())
    consumer_cmd.add_action('bind', consumer.Bind())
    consumer_cmd.add_action('unbind', consumer.Unbind())
    consumer_cmd.add_action('history', consumer.History())
    consumer_cmd.add_action('update', consumer.Update())
    client.add_command('consumer', consumer_cmd)

    errata_cmd = errata.Errata()
    errata_cmd.add_action('list', errata.List())
    client.add_command('errata', errata_cmd)

    repo_cmd = repo.Repo()
    repo_cmd.add_action('list', repo.List())
    client.add_command('repo', repo_cmd)


if __name__ == '__main__':
    #root_check()
    client = PulpCLI()
    setup_client(client)
    bundle = Consumer()
    if not bundle.getid():
        print >> sys.stderr, _("warning: this client is not registered; please register to continue")
    client.main()
